}

<!DOCTYPE html>

<html lang="ko">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>kaangrim scm login</title>
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width">
    <meta name="subject" content="">
    <meta name="title" content="Publishing guideline">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <link rel="stylesheet" type="text/css" href="~/Content/Css/common.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Css/reset.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Css/code/shCore.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Css/code/shThemeRDark.css" />

    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js" defer="defer"></script>
    <script>
        function fncLoginClick() {
            if ($("#LoginID").val() == "") {
                alert("아이디를 입력해 주세요.");
                $("#LoginID").focus();
                return;
            }
            if ($("#LoginPW").val() == "") {
                alert("비밀번호를 입력해 주세요.");
                $("#LoginPW").focus();
                return;
            }
            $("#SCMform").attr("action", "/Account/Login").submit();
        }
    </script>
</head>
<body>
    <div id="wrap">
        <header></header>

        <main class="pl_0">
            <section>
                <div class="gate">
                    <div class="area_scm_login">
                        <strong class="tit_scm_login"><span class="web_s">KAANGRIM SCM</span></strong>
                        <form name="SCMform" id="SCMform" method="post">
                            <div class="scm_login">
                                <label>아이디</label>
                                <input name="LoginID" id="LoginID" type="text" alt="아이디" >
                                <label>비밀번호</label>
                                <input name="LoginPW" id="LoginPW" type="password" alt="비밀번호">
                            </div>
                            <div class="btn_scm_login"><button onclick="fncLoginClick();">Login</button></div>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

</body>
</html>